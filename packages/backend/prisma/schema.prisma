// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userLogin {
  userID        String @id
  password      String
  addressName   String?
  nickName      String?
  createdAt     DateTime @default(now())
  deletedAt     DateTime?
}

model receipt {
  settlementId  String @id
  user          userLogin @relation(fields: [userId], references: [userID])
  userID        String
  subMoney      Int
  genre         String?
  storeName     String?
  memo          String?
  useDetails    String?
}

model receiptDetails {
  productsName  String @id
  settlementId  String @id @relation()
  unitprice     Int
  quantity      String
  sumMoney      String?
  discount      String?
  tax           String?
}