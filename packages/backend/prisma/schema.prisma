// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model userLogin {
  userID      String    @id
  password    String
  addressName String?
  nickName    String?
  createdAt   DateTime  @default(now())
  deletedAt   DateTime?
  receipt     receipt[]
}

model receipt {
  settlementId   String           @id
  user           userLogin        @relation(fields: [userID], references: [userID])
  userID         String
  subMoney       Int
  genre          String?
  storeName      String?
  memo           String?
  useDetails     String?
  receiptDetails receiptDetails[]
}

model receiptDetails {
  productsName String
  unitprice    Int
  quantity     String
  sumMoney     Int
  discount     Int? // 値引き(実数値)
  tax          Int    @default(10) // 消費税(実数値)
  settlementId String

  receipt receipt @relation(fields: [settlementId], references: [settlementId])
  @@id([productsName, settlementId])
}
